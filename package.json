{
  "name": "@untidy/thetvdb",
  "description": "fully-typed client for accessing the TheTVDB API V4 for Node.js",
  "version": "0.0.7",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "thetvdb",
    "series",
    "movies",
    "api"
  ],
  "author": "falsepopsky",
  "license": "GPL-3.0",
  "scripts": {
    "dev": "tsx src/playground.ts",
    "format": "prettier --cache -w .",
    "lint": "eslint . --cache --cache-location \"./node_modules/.cache/eslint/\"",
    "clean:workspace": "rm -rf node_modules dist",
    "clean:build": "rm -rf dist",
    "prebuild": "pnpm run clean:build",
    "build": "tsc --project tsconfig.build.json",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "release": "pnpm run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@swc/core": "^1.3.68",
    "@swc/jest": "^0.2.26",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.4.1",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.2",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.6.1",
    "msw": "^1.2.2",
    "prettier": "^3.0.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "undici": "^5.22.1"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/falsepopsky/thetvdb.git"
  },
  "bugs": {
    "url": "https://github.com/falsepopsky/thetvdb/issues"
  }
}
