---
interface Props {
  apiPath: string;
}

const { apiPath } = Astro.props;
---

<div class="flex items-center gap-x-3">
  <span
    class="font-mono text-[0.625rem] font-semibold leading-6 rounded-lg px-1.5 ring-1 ring-inset ring-emerald-300 dark:ring-emerald-400/30 bg-emerald-400/10 text-emerald-500 dark:text-emerald-400">
    GET
  </span>
  <span class="h-1 w-1 rounded-full bg-zinc-300 dark:bg-zinc-600"></span>
  <span class="font-mono text-xs text-[--sl-color-black] bg-[--sl-color-accent] dark:bg-[--sl-color-accent-high] px-1">
    {apiPath}
  </span>
</div>
