---
interface Props {
  title: string;
  details: string;
}

const { title, details } = Astro.props;
---

<div
  class="flex-1 rounded-md border border-zinc-800/10 bg-slate-200/60 p-8 hover:bg-slate-200 dark:border-slate-100/10 dark:bg-neutral-950/20 hover:dark:bg-neutral-950/40">
  <div class="mb-4 flex">
    <slot />
  </div>
  <span class="mt-6 text-lg text-[--sl-color-white]">{title}</span>

  <p class="mt-2 text-base/relaxed">
    {details}
  </p>
</div>
